<Window x:Class="LangGuard.UI.HotkeyPickerWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Pick Hotkey" Height="170" Width="420"
 WindowStartupLocation="CenterOwner"
 KeyDown="Window_KeyDown">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Press the new hotkey combination now..." FontSize="14"/>
        <TextBlock x:Name="PreviewText" Grid.Row="1" Margin="0,10,0,10" FontSize="16" FontWeight="SemiBold"/>
        <TextBlock Grid.Row="2" Text="Tip: Use Ctrl/Alt/Shift + a letter (A-Z). Press Esc to cancel." Opacity="0.7"/>
    </Grid>
</Window>
